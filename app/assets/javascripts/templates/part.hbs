<div class="row">
    <div class="large-8 columns">
      <h3>{{model.title}}</h3>
    </div>
    {{#unless editing}}
      <div class="large-4 columns">
        <button {{action "createVersion"}} class="button small right spacing-top">Save Version</button>
        {{#linkTo "part.edit" class="button small right spacing-top"}} Edit {{/linkTo}}
        {{#linkTo "part.suggestion" class="button small right spacing-top"}} Suggestion {{/linkTo}}
      </div>
    {{/unless}}
</div>

<div class="row">
  <div class="large-12 columns">
    {{outlet}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3>Suggestions</h3>
    {{render "suggestions" model.suggestions}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h3>Versions</h3>
    {{render "versions" model.versions}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <h5>Comments</h5>
    {{render "unarchived_comments" model.comments}}
  </div>
</div>

{{view "Labs.NewCommentView"}}
