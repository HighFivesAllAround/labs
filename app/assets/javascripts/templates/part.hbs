<div class="row">
    <div class="large-10 columns">
      <h3>{{model.title}}</h3>
    </div>
    {{#unless editing}}
      <div class="large-2 columns">
        {{#linkTo "part.edit" class="button small right spacing-top"}} Edit {{/linkTo}}
      </div>
    {{/unless}}
</div>

<div class="row">
  <div class="large-12 columns">
    {{outlet}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-12 columns">
        <h5>Suggestions</h5>
      </div>
    </div>

    {{render "suggestions" model.suggestions}}
  </div>
</div>

{{render "comments" model.comments}}
{{view "Labs.NewCommentView"}}
