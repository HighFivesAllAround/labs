<div class="row">
  {{#if view.editingTitle}}
    <div class="large-2 columns inline-edit">
      {{input valueBinding="view.titleCopy"}}
    </div>
    <div {{action "toggleTitleEdit" target="view"}} class="large-10 columns inline-edit">
      <a {{action "save" target="view"}} class="button small">Save</a>
      <a class="button small">Cancel</a>
    </div>
  {{else}}
    <h3 {{action "toggleTitleEdit" target="view"}}>{{model.title}}</h3>
  {{/if}}
</div>

<div class="row">
  <div class="large-12 columns">
    {{outlet}}
  </div>
</div>

<div class="row">
  <div class="large-12 columns">
    <div class="row">
      <div class="large-12 columns">
        <h5>Suggestions</h5>
      </div>
    </div>

    {{render "suggestions" model.suggestions}}
  </div>
</div>

{{render "comments" model.comments}}
{{view "Labs.NewCommentView"}}
